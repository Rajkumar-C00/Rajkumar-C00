{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",  // Compiled JavaScript files will go here
    "resolveJsonModule": true
  },
  "include": [
    "*.ts"  // Look for TypeScript files in the root directory (or adjust if needed)
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
